<?php

/**
 * Implements hook_menu().
 */
function nodejs4d6_subscribe_menu() {
  return array(
    'nodejs4d6/subscribe/%/%/%' => array(
      'title' => 'Subscribe/unsubscribe to node',
      'page callback' => 'nodejs4d6_subscribe_subscribe_node',
      'page arguments' => array(2, 3, 4),
      'access arguments' => array('nodejs4d6 subscribe to node'),
      'type' => MENU_CALLBACK,
    ),
  );
}

/**
 * Implements hook_permission().
 */
function nodejs4d6_subscribe_permission() {
  return array(
    'nodejs4d6 subscribe to node' => array(
      'title' => t('Subscribe to realtime content updates'),
      'description' => t('Allows users to subscribe to content and receive realtime notifications.'),
    ),
  );
}

/**
 * Implements hook_comment_insert().
 */
function nodejs4d6_subscribe_comment_insert($comment) {
  if (nodejs4d6_subscribe_is_node_subscribed_to($comment->nid)) {
    nodejs4d6_subscribe_send_notification(node_load($comment->nid), 'commented on', array('fragment' => 'comment-' . $comment->cid));
  }
}

/**
 * Implements hook_nodejs4d6_user_channels().
 */
function nodejs4d6_subscribe_nodejs4d6_user_channels($account) {
  $channels = array();
  foreach (nodejs4d6_subscribe_get_user_channels($account->uid) as $subscription) {
    $channels[] = 'nodejs4d6_subscribe_node_' . $subscription->nid;
  }
  return $channels;
}

/**
 * Check to see if anyone is subscribed to this node.
 * 
 * @param mixed $nid 
 * @return boolean
 */
function nodejs4d6_subscribe_is_node_subscribed_to($nid) {
  return db_query('SELECT COUNT(*) subscription_count FROM {nodejs4d6_subscribe_subscription} WHERE nid = :nid', array(':nid' => $nid))->fetchField();
}

/**
 * Check to see if the given uid is subscribed to the given node.
 * 
 * @param mixed $uid 
 * @param mixed $nid 
 * @return boolean
 */
function nodejs4d6_subscribe_is_user_subscribed_to_node($uid, $nid) {
  return db_query('SELECT nid FROM {nodejs4d6_subscribe_subscription} WHERE uid = :uid AND nid = :nid', array(':uid' => $uid, ':nid' => $nid))->fetchField();
}

/**
 * Get a list of channels this user is subscribed to.
 *
 * @param mixed $uid
 * @return array
 */
function nodejs4d6_subscribe_get_user_channels($uid) {
  return db_query('SELECT nid FROM {nodejs4d6_subscribe_subscription} WHERE uid = :uid', array(':uid' => $uid))->fetchAll();
}

/**
 * Implements hook_form_BASE_FORM_ID_alter().
 */
function nodejs4d6_subscribe_form_node_form_alter(&$form, $form_state) {
  // Get subscription settings for this node
  $subscribe_author_default = FALSE;
  $subscribe_user_default = FALSE;
  if (!empty($form['#node']->nid)) {
    $subscribe_author_default = nodejs4d6_subscribe_is_user_subscribed_to_node($form['#node']->uid, $form['#node']->nid) ? '1' : '0';
    if (isset($form['#node']->nodejs4d6_subscribe)) {
      $subscribe_user_default = $form['#node']->nodejs4d6_subscribe;
    }
  }

  // Add subscription settings form items
  $form['nodejs4d6_subscribe'] = array(
    '#type' => 'fieldset',
    '#title' => t('Realtime notifications'),
    '#collapsible' => TRUE,
    '#collapsed' => TRUE,
    '#group' => 'additional_settings',
    '#attributes' => array(
      'class' => array('nodejs4d6-subscribe-form'),
    ),
    '#access' => TRUE,
    '#weight' => 30,
    '#tree' => TRUE,
  );
  $form['nodejs4d6_subscribe']['nodejs4d6_subscribe_node_author'] = array(
    '#type' => 'checkbox',
    '#title' => t('Notify the content author'),
    '#description' => t('Subscribe to realtime notifications on this content'),
    '#default_value' => $subscribe_author_default,
  );
  $form['nodejs4d6_subscribe']['nodejs4d6_subscribe_node_user'] = array(
    '#type' => 'checkbox',
    '#title' => t('Allow users to subscribe'),
    '#description' => t('Allow users to subscribe for realtime notifications'),
    '#default_value' => $subscribe_user_default,
  );
}

/**
 * Page callback for subscribing/unsubscribing to a node.
 */
function nodejs4d6_subscribe_subscribe_node($method, $nid, $op) {
  global $user;

  // Check inputs
  $nid = intval($nid);
  $node = $nid ? node_load($nid) : FALSE;
  if (!$node) {
    drupal_not_found();
  }

  // Handle subscribe or unsubscribe operations
  if ($op === 'subscribe' && !nodejs4d6_subscribe_is_user_subscribed_to_node($user->uid, $nid)) {
    nodejs4d6_subscribe_insert($node, $user->uid);
  }
  elseif ($op === 'unsubscribe' && nodejs4d6_subscribe_is_user_subscribed_to_node($user->uid, $nid)) {
    nodejs4d6_subscribe_delete($node, $user->uid);
  }

  // Return AJAX response or redirect to node
  if ($method === 'ajax') {
//TODO: ajax method
  }
  drupal_goto('node/' . $nid);
}

/**
 * Implements hook_node_load().
 */
function nodejs4d6_subscribe_node_load($nodes, $types) {
  $result = db_query('SELECT nid, subscribe FROM {nodejs4d6_subscribe_node} WHERE nid IN(:nids)', array(':nids' => array_keys($nodes)));
  foreach ($result as $record) {
    $nodes[$record->nid]->nodejs4d6_subscribe = $record->subscribe;
  }
}

/**
 * Implements hook_node_insert().
 */
function nodejs4d6_subscribe_node_insert($node) {
  if (isset($node->nodejs4d6_subscribe)) {
    if ($node->nodejs4d6_subscribe['nodejs4d6_subscribe_node_author']) {
      nodejs4d6_subscribe_insert($node, $node->uid);
    }
    if ($node->nodejs4d6_subscribe['nodejs4d6_subscribe_node_user']) {
      db_query('INSERT {nodejs4d6_subscribe_node} (nid, subscribe) VALUES (:nid, :subscribe)', array(':nid' => $node->nid, ':subscribe' => $node->nodejs4d6_subscribe));
    }
  }
}

/**
 * Implements hook_node_update().
 */
function nodejs4d6_subscribe_node_update($node) {
  if (isset($node->nodejs4d6_subscribe)) {
    if (!$node->nodejs4d6_subscribe['nodejs4d6_subscribe_node_author']) {
      nodejs4d6_subscribe_delete($node, $node->uid);
    }
    elseif (!nodejs4d6_subscribe_is_user_subscribed_to_node($node->uid, $node->nid)) {
      nodejs4d6_subscribe_insert($node, $node->uid);
    }

    if ($node->nodejs4d6_subscribe['nodejs4d6_subscribe_node_user']) {
      $node_old = node_load($node->nid);
      if (isset($node_old->nodejs4d6_subscribe)) {
        db_query('UPDATE {nodejs4d6_subscribe_node} SET subscribe = :subscribe WHERE nid = :nid', array(':nid' => $node->nid, ':subscribe' => $node->nodejs4d6_subscribe['nodejs4d6_subscribe_node_user']));
      }
      else {
        db_query('INSERT {nodejs4d6_subscribe_node} (nid, subscribe) VALUES (:nid, :subscribe)', array(':nid' => $node->nid, ':subscribe' => $node->nodejs4d6_subscribe['nodejs4d6_subscribe_node_user']));
      }
    }
    else {
      db_query('DELETE {nodejs4d6_subscribe_node} WHERE nid = :nid', array(':nid' => $node->nid));
//TODO: When disabling subscriptions for users on a node, delete all active subscriptions
    }
  }

  if (nodejs4d6_subscribe_is_node_subscribed_to($node->nid)) {
    nodejs4d6_subscribe_send_notification($node, 'update');
  }
}

/**
 * Implements hook_node_delete().
 */
function nodejs4d6_subscribe_node_delete($node) {
  db_query('DELETE FROM {nodejs4d6_subscribe_node} WHERE nid = :nid', array(':nid' => $node->nid));

  if (nodejs4d6_subscribe_is_node_subscribed_to($node->nid)) {
    nodejs4d6_subscribe_send_notification($node, 'deleted');
//TODO: When a node is deleted, delete subscriptions of all users on this node
  }
}

/**
 * Implements hook_node_view().
 */
function nodejs4d6_subscribe_node_view($node, $view_mode) {
  global $user;

  // If node allows nodejs4d6 subscriptions and user has permission to subscribe,
  // then provide "Subscribe" or "Unsubscribe" links.
  if (isset($node->nodejs4d6_subscribe) && $node->nodejs4d6_subscribe && user_access('nodejs4d6 subscribe to content') && in_array($view_mode, array('full', 'teaser'))) {
    $links = array();
    $node_title_stripped = strip_tags($node->title);
    if (nodejs4d6_subscribe_is_user_subscribed_to_node($user->uid, $node->nid)) {
      $links['nodejs4d6-subscribe-unsubscribe-node'] = array(
        'title' => t('Unsubscribe'),
        'href' => "nodejs4d6/subscribe/nojs/$node->nid/unsubscribe",
        'attributes' => array('class' => array('nodejs4d6-subscribe-node-link'), 'title' => t('Unsubscribe to @title', array('@title' => $node_title_stripped))),
      );
    }
    else {
      $links['nodejs4d6-subscribe-subscribe-node'] = array(
        'title' => t('Subscribe'),
        'href' => "nodejs4d6/subscribe/nojs/$node->nid/subscribe",
        'attributes' => array('class' => array('nodejs4d6-subscribe-node-link'), 'title' => t('Subscribe to @title', array('@title' => $node_title_stripped))),
      );
    }
    $node->content['links']['nodejs4d6_subscribe'] = array(
      '#theme' => 'links__node__nodejs4d6_subscribe',
      '#links' => $links,
      '#attributes' => array('class' => array('links', 'inline')),
    );
  }
}

/**
 * Delete a subscription to a node.
 * 
 * @param mixed $node
 * @param mixed $uid
 * @return boolean
 */
function nodejs4d6_subscribe_delete($node, $uid) {
  nodejs4d6_remove_user_from_channel($uid, 'nodejs4d6_subscribe_node_' . $node->nid);
  return db_query('DELETE FROM {nodejs4d6_subscribe_subscription} WHERE nid = :nid AND uid = :uid', array(':nid' => $node->nid, ':uid' => $uid));
}

/**
 * Create subscription to a node for a given user.
 * 
 * @param mixed $node
 * @param mixed $uid
 * @return boolean
 */
function nodejs4d6_subscribe_insert($node, $uid) {
  nodejs4d6_add_user_to_channel($uid, 'nodejs4d6_subscribe_node_' . $node->nid);
  return db_query('INSERT INTO {nodejs4d6_subscribe_subscription} (nid, uid) VALUES (:nid, :uid)', array(':nid' => $node->nid, ':uid' => $uid));
}

/**
 * Send a message that the given node was updated.
 * 
 * @param mixed $node
 * @param mixed $action
 * @param array $link_options
 */
function nodejs4d6_subscribe_send_notification($node, $action, $link_options = array()) {
  $subject = t('Node %action.', array('%action' => $action));
  $link = l($node->title, 'node/' . $node->nid);
  $body = t('The node !link was %action.', array('!link' => $link, '%action' => $action));

  $message = (object) array(
    'broadcast' => FALSE,
    'channel' => 'nodejs4d6_subscribe_node_' . $node->nid,
    'data' => (object) array(
      'subject' => $subject,
      'body' => $body,
    ),
  );
  nodejs4d6_enqueue_message($message);
}

